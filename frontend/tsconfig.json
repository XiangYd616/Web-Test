{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    // 逐步启用严格检查
    "strict": false,
    "noImplicitAny": true, // 启用：禁止隐式any类型
    "strictNullChecks": true, // 启用：null/undefined检查
    "strictFunctionTypes": true, // 启用：函数类型严格检查
    "strictBindCallApply": true, // 启用：bind/call/apply严格检查
    "strictPropertyInitialization": false, // 暂时关闭：属性初始化检查
    "noImplicitReturns": true, // 启用：函数必须有返回值
    "noImplicitThis": true, // 启用：this类型检查
    "alwaysStrict": true, // 启用：严格模式
    "noUnusedLocals": true, // 启用：未使用变量检查
    "noUnusedParameters": true, // 启用：未使用参数检查
    "exactOptionalPropertyTypes": false, // 暂时关闭：精确可选属性
    "noImplicitOverride": true, // 启用：重写方法检查
    "noPropertyAccessFromIndexSignature": false, // 暂时关闭：索引签名访问
    "noUncheckedIndexedAccess": false, // 暂时关闭：未检查索引访问
    // 模块和兼容性设置
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, // 启用：文件名大小写一致性
    "allowJs": true,
    "checkJs": false,
    "noErrorTruncation": true, // 启用：显示完整错误信息
    "preserveConstEnums": true,
    "removeComments": false
  },
  "include": [
    "src/**/*",
    "*.ts",
    "*.tsx",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "public"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}