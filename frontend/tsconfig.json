{
  "compilerOptions": {
    /* 基础选项 */
    "target": "ES2020",                          // 编译目标
    "lib": ["ES2020", "DOM", "DOM.Iterable"],    // 引入的类型库
    "module": "ESNext",                          // 模块系统
    "moduleResolution": "bundler",               // 模块解析策略
    "resolveJsonModule": true,                   // 允许导入JSON
    "jsx": "react-jsx",                          // JSX支持
    
    /* 严格类型检查 - 开发模式（宽松） */
    "strict": false,                             // 关闭严格模式
    "noImplicitAny": false,                      // 允许隐式any
    "strictNullChecks": false,                   // 关闭严格空值检查
    "strictFunctionTypes": false,                // 关闭严格函数类型
    "strictBindCallApply": false,                // 关闭严格bind/call/apply
    "strictPropertyInitialization": false,       // 关闭严格属性初始化
    "noImplicitThis": false,                     // 允许隐式this
    "alwaysStrict": false,                       // 不强制严格模式
    
    /* 额外检查 - 开发模式（宽松） */
    "noUnusedLocals": false,                     // 不检查未使用的局部变量
    "noUnusedParameters": false,                 // 不检查未使用的参数
    "noImplicitReturns": false,                  // 不强制检查函数返回值
    "noFallthroughCasesInSwitch": false,        // 不检查switch穿透
    "noUncheckedIndexedAccess": false,           // 不强制索引访问检查
    "noImplicitOverride": false,                 // 不强制检查override
    "noPropertyAccessFromIndexSignature": false, // 允许索引签名属性访问
    
    /* 模块导入 */
    "esModuleInterop": true,                     // ES模块互操作
    "allowSyntheticDefaultImports": true,        // 允许合成默认导入
    "forceConsistentCasingInFileNames": true,    // 强制文件名大小写一致
    "isolatedModules": true,                     // 独立模块
    
    /* 输出配置 */
    "noEmit": true,                              // 不输出文件(由Vite处理)
    "declaration": false,                        // 不生成声明文件
    "sourceMap": true,                           // 生成source map
    
    /* 其他选项 */
    "skipLibCheck": true,                        // 跳过库文件检查
    "allowJs": false,                            // 不允许JS文件
    "checkJs": false,                            // 不检查JS文件
    "useDefineForClassFields": true,             // 使用define定义类字段
    
    /* 路径映射 */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["./components/*"],
      "@pages/*": ["./pages/*"],
      "@services/*": ["./services/*"],
      "@hooks/*": ["./hooks/*"],
      "@utils/*": ["./utils/*"],
      "@types/*": ["./types/*"],
      "@contexts/*": ["./contexts/*"],
      "@config/*": ["./config/*"],
      "@styles/*": ["./styles/*"],
      "@shared/*": ["../shared/*"]
    },
    
    /* 类型定义 */
    "types": ["vite/client"],
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  
  /* 包含的文件 */
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts"
  ],
  
  /* 排除的文件 */
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "coverage",
    "vite.config.ts"
  ],
  
  /* 参考项目 */
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}

