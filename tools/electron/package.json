{
  "name": "test-web-app-desktop",
  "version": "1.0.0",
  "description": "Test Web App - 专业的Web应用测试平台桌面版",
  "main": "main.js",
  "author": "Test Web App Team",
  "license": "MIT",
  "homepage": "https://github.com/your-repo/test-web-app",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-repo/test-web-app.git"
  },
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dist": "yarn build",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.testweb.app",
    "productName": "Test Web App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "assets/**/*",
      "../client/**/*",
      "!../client/node_modules",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "../server",
        "to": "server",
        "filter": [
          "!node_modules",
          "!*.log",
          "!*.tmp"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.developer-tools",
      "hardenedRuntime": true,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Test Web App"
    },
    "dmg": {
      "title": "Test Web App",
      "icon": "assets/icon.icns",
      "background": "assets/dmg-background.png",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "your-username",
      "repo": "test-web-app"
    }
  },
  "dependencies": {
    "electron": "^28.0.0",
    "electron-updater": "^6.1.7",
    "sqlite3": "^5.1.6",
    "better-sqlite3": "^9.2.2",
    "playwright": "^1.40.0",
    "puppeteer": "^21.6.1",
    "node-fetch": "^3.3.2",
    "fs-extra": "^11.2.0",
    "archiver": "^6.0.1",
    "extract-zip": "^2.0.1",
    "pdf-lib": "^1.17.1",
    "exceljs": "^4.4.0",
    "docx": "^8.5.0",
    "chart.js": "^4.4.1",
    "canvas": "^2.11.2",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "electron-builder": "^24.9.1",
    "cross-env": "^7.0.3",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "electron",
    "testing",
    "web-testing",
    "performance",
    "security",
    "compatibility",
    "desktop-app"
  ]
}
