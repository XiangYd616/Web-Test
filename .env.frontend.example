# 前端环境变量配置

# API服务器地址
VITE_API_URL=http://localhost:3001/api

# WebSocket服务器地址
VITE_WS_URL=ws://localhost:3001

# 应用配置
VITE_APP_NAME=Test Web App
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=专业的Web测试平台

# 功能开关
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_DEBUG=true
VITE_ENABLE_ANALYTICS=false

# 第三方服务
VITE_GOOGLE_ANALYTICS_ID=
VITE_SENTRY_DSN=

# 文件上传配置
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt

# 测试配置
VITE_DEFAULT_TEST_TIMEOUT=300000
VITE_MAX_CONCURRENT_TESTS=5

# 开发配置
VITE_DEV_TOOLS=true
VITE_MOCK_DELAY=1000

# 生产配置提示
# 在生产环境中，请确保：
# 1. 设置正确的 VITE_API_URL
# 2. 禁用 VITE_ENABLE_MOCK_DATA
# 3. 禁用 VITE_ENABLE_DEBUG
# 4. 配置分析和监控服务
# 5. 设置适当的文件上传限制
