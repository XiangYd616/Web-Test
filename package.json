{
  "name": "test-web-app",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "description": "集成压力测试、内容检测、兼容性测试的跨平台桌面应用",
  "author": {
    "name": "Test Web App Team",
    "email": "1823170057@qq.com"
  },
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "_comment_main": "🚀 主要启动命令",
    "start": "concurrently \"npm run backend\" \"npm run frontend\"",
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend\"",
    "_comment_services": "🔧 前后端服务",
    "frontend": "cd frontend && npm run dev",
    "backend": "cd backend && npm start",
    "backend:dev": "cd backend && npm run dev",
    "_comment_build": "📦 构建相关",
    "build": "cd frontend && npm run build",
    "build:check": "cd frontend && npm run build:check",
    "preview": "cd frontend && npm run preview",
    "type-check": "cd frontend && npm run type-check",
    "_comment_database": "🗄️ 数据库管理",
    "db:init": "cd backend && npm run db:init",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:check": "cd backend && npm run db:check",
    "db:backup": "cd backend && npm run db:backup",
    "_comment_test": "🧪 测试相关",
    "test": "cd frontend && npm run test",
    "test:run": "cd frontend && npm run test:run",
    "test:coverage": "cd frontend && npm run test:coverage",
    "test:e2e": "playwright test",
    "_comment_electron": "⚡ Electron应用",
    "electron:dev": "concurrently \"npm run frontend\" \"wait-on http://localhost:5174 && cross-env ELECTRON_IS_DEV=1 electron .\"",
    "electron:build": "npm run build && electron-builder",
    "_comment_maintenance": "🔧 项目维护",
    "lint": "cd frontend && npm run lint && cd ../backend && npm run lint",
    "lint:fix": "cd frontend && npm run lint:fix && cd ../backend && npm run lint:fix",
    "format": "cd frontend && npm run format",
    "ci:check": "npm run type-check && npm run lint && npm run build",
    "_comment_naming": "🏷️ 命名规范",
    "lint:naming": "node scripts/precise-naming-checker.cjs",
    "lint:naming:full": "node scripts/comprehensive-naming-checker.cjs",
    "fix:naming": "node scripts/auto-fix-naming.cjs --fix",
    "check:naming": "node scripts/precise-naming-checker.cjs",
    "_comment_imports": "📦 导入导出修复",
    "fix:imports": "node scripts/simple-import-fixer.cjs",
    "check:imports": "node scripts/import-export-fixer.cjs",
    "check:imports:precise": "node scripts/precise-path-checker.cjs",
    "fix:imports:smart": "node scripts/smart-import-fixer.cjs --fix",
    "_comment_services": "🔧 服务依赖分析",
    "analyze:services": "node scripts/service-dependency-analyzer.cjs",
    "fix:services": "node scripts/service-import-fixer.cjs --fix",
    "_comment_cleanup": "🧹 项目清理",
    "analyze:cleanup": "node scripts/project-cleanup-analyzer.cjs",
    "clean:project": "node scripts/project-cleaner.cjs --clean",
    "_comment_intelligent": "🧠 智能路径修复",
    "fix:paths:intelligent": "node scripts/intelligent-path-fixer.cjs --fix",
    "fix:imports:normalize": "node scripts/import-path-normalizer.cjs --fix",
    "_comment_cleanup": "🧹 清理操作",
    "clean": "rimraf dist dist-electron node_modules/.cache",
    "clean:all": "rimraf dist dist-electron node_modules",
    "_comment_utils": "🔧 实用工具",
    "deps:update": "npm update",
    "security:audit": "npm audit && cd backend && npm audit"
  },
  "dependencies": {
    "@types/node": "^20.0.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "pixelmatch": "^7.1.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-router-dom": "^6.8.0",
    "recharts": "^2.8.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.17.20",
    "@types/pg": "^8.10.9",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.0",
    "connect-history-api-fallback": "^2.0.0",
    "cross-env": "^7.0.3",
    "electron": "^32.2.6",
    "electron-builder": "^25.1.8",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.31",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^4.5.0",
    "vitest": "^1.6.0",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.testweb.app",
    "productName": "Test Web App",
    "directories": {
      "output": "dist-electron",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "!node_modules/.cache",
      "!node_modules/.vite"
    ],
    "includeSubNodeModules": true,
    "buildDependenciesFromSource": false,
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "your-username",
      "repo": "test-web-app"
    }
  },
  "optionalDependencies": {
    "@esbuild/win32-x64": "^0.25.5"
  }
}