{
  "name": "test-web-app",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "workspaces": [
    ".",
    "server"
  ],
  "description": "集成压力测试、内容检测、兼容性测试的跨平台桌面应用",
  "author": {
    "name": "Test Web App Team",
    "email": "1823170057@qq.com"
  },
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "_comment_main": "🚀 主要启动命令",
    "start": "concurrently \"npm run backend\" \"npm run frontend\"",
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend\"",
    "_comment_services": "🔧 前后端服务",
    "frontend": "cross-env VITE_DEV_PORT=5174 vite --host",
    "backend": "cd server && npm start",
    "backend:dev": "cd server && npm run dev",
    "_comment_build": "📦 构建相关",
    "build": "cross-env NODE_ENV=production vite build",
    "build:check": "cross-env NODE_ENV=production tsc --noEmit && cross-env NODE_ENV=production vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "_comment_test": "🧪 测试相关",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "_comment_electron": "⚡ Electron应用",
    "electron:start": "electron .",
    "electron:dev": "concurrently \"npm run frontend\" \"wait-on http://localhost:5174 && cross-env ELECTRON_IS_DEV=1 electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:dist": "npm run build && cross-env ELECTRON_MIRROR=https://npmmirror.com/mirrors/electron/ electron-builder",
    "_comment_database": "🗄️ 数据库操作",
    "db:setup": "cd server && npm run init-db",
    "db:check": "cd server && npm run check-db",
    "db:reset": "cd server && npm run reset-db",
    "_comment_maintenance": "🔧 项目维护",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,css,md}\"",
    "deps:check": "node scripts/dependency-analyzer.js",
    "deps:update": "npm update",
    "ci:fix": "node scripts/fix-ci-issues.cjs",
    "ci:check": "npm run type-check && npm run lint && npm run build",
    "_comment_env": "🌍 环境变量管理",
    "env:check": "node scripts/check-env-config.cjs",
    "env:validate": "cd server && npm run validate-env",
    "env:separation": "node scripts/validate-env-separation.cjs",
    "env:report": "node scripts/env-usage-report.cjs",
    "_comment_config": "⚙️ 配置管理",
    "port:check": "node scripts/port-config.cjs",
    "package:analyze": "node scripts/package-json-analyzer.cjs",
    "clean": "rimraf dist dist-electron node_modules/.cache",
    "clean:all": "rimraf dist dist-electron node_modules"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "chart.js": "^4.4.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.5.2",
    "react-router-dom": "^6.20.1",
    "recharts": "^2.15.3",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.0",
    "connect-history-api-fallback": "^2.0.0",
    "cross-env": "^7.0.3",
    "electron": "^32.2.6",
    "electron-builder": "^25.1.8",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.31",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^4.5.0",
    "vitest": "^1.6.0",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.testweb.app",
    "productName": "Test Web App",
    "directories": {
      "output": "dist-electron",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "!node_modules/.cache",
      "!node_modules/.vite"
    ],
    "includeSubNodeModules": true,
    "buildDependenciesFromSource": false,
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "your-username",
      "repo": "test-web-app"
    }
  },
  "optionalDependencies": {
    "@esbuild/win32-x64": "^0.25.5"
  }
}