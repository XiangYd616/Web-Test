{
  "name": "test-web-app",
  "version": "1.0.0",
  "type": "module",
  "description": "集成压力测试、内容检测、兼容性测试的跨平台桌面应用",
  "author": {
    "name": "Test Web App Team",
    "email": "1823170057@qq.com"
  },
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "_comment_main": "🚀 主要启动命令",
    "start": "concurrently \"npm run backend\" \"npm run frontend\"",
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend\"",
    "_comment_services": "🔧 前后端服务",
    "frontend": "vite --host",
    "backend": "node server/app.js",
    "backend:dev": "nodemon server/app.js",
    "_comment_build": "📦 构建相关",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "_comment_test": "🧪 测试相关",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "_comment_electron": "⚡ Electron应用",
    "electron:start": "electron .",
    "electron:dev": "concurrently \"npm run frontend\" \"wait-on http://localhost:5174 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:dist": "npm run build && cross-env ELECTRON_MIRROR=https://npmmirror.com/mirrors/electron/ electron-builder",
    "_comment_database": "🗄️ 数据库操作",
    "db:setup": "ts-node scripts/initDatabase.ts"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/pg": "^8.15.4",
    "archiver": "^6.0.1",
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "chart.js": "^4.4.0",
    "cheerio": "^1.1.0",
    "clsx": "^2.0.0",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "fs-extra": "^11.2.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.294.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "pdf-lib": "^1.17.1",
    "pg": "^8.16.0",
    "playwright": "^1.53.0",
    "rate-limiter-flexible": "^7.1.1",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.5.2",
    "react-router-dom": "^6.20.1",
    "recharts": "^2.15.3",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/compression": "^1.8.1",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.19.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/uuid": "^9.0.8",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.0",
    "connect-history-api-fallback": "^2.0.0",
    "cross-env": "^7.0.3",
    "electron": "^32.2.6",
    "electron-builder": "^25.1.8",
    "nodemon": "^3.1.10",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^4.5.0",
    "vitest": "^1.6.0",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.testweb.app",
    "productName": "Test Web App",
    "directories": {
      "output": "dist-electron",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "!node_modules/.cache",
      "!node_modules/.vite"
    ],
    "includeSubNodeModules": true,
    "buildDependenciesFromSource": false,
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "your-username",
      "repo": "test-web-app"
    }
  },
  "optionalDependencies": {
    "@esbuild/win32-x64": "^0.25.5"
  }
}