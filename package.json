{
  "name": "test-web-app",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "workspaces": [
    ".",
    "frontend",
    "backend",
    "shared",
    "tools/electron"
  ],
  "description": "集成压力测试、内容检测、兼容性测试的跨平台桌面应用",
  "author": {
    "name": "Test Web App Team",
    "email": "1823170057@qq.com"
  },
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "_comment_main": "🚀 主要启动命令",
    "start": "concurrently \"npm run backend\" \"npm run frontend\"",
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend\"",
    "_comment_services": "🔧 前后端服务",
    "frontend": "cross-env VITE_DEV_PORT=5174 vite --host",
    "backend": "cross-env npm run --prefix backend start",
    "backend:dev": "cross-env npm run --prefix backend dev",
    "_comment_build": "📦 构建相关",
    "build": "cross-env NODE_ENV=production vite build",
    "build:check": "cross-env NODE_ENV=production tsc --noEmit && cross-env NODE_ENV=production vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "_comment_test": "🧪 测试相关",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "e2e:debug": "playwright test --debug",
    "_comment_electron": "⚡ Electron应用",
    "electron:start": "electron .",
    "electron:dev": "concurrently \"npm run frontend\" \"wait-on http://localhost:5174 && cross-env ELECTRON_IS_DEV=1 electron .\"",
    "electron:build": "cross-env npm run build && electron-builder",
    "electron:dist": "npm run build && cross-env ELECTRON_MIRROR=https://npmmirror.com/mirrors/electron/ electron-builder",
    "_comment_database": "🗄️ 数据库操作（委托给后端）",
    "db:init": "npm run --prefix backend db:init:pg",
    "db:migrate": "npm run --prefix backend db:migrate",
    "db:status": "npm run --prefix backend db:status",
    "db:backup": "npm run --prefix backend db:backup",
    "_comment_maintenance": "🔧 项目维护",
    "lint": "eslint frontend --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint frontend --ext .ts,.tsx --fix",
    "format": "prettier --write \"frontend/**/*.{ts,tsx,js,jsx,css,md}\"",
    "format:check": "prettier --check \"frontend/**/*.{ts,tsx,js,jsx,css,md}\"",
    "consolidate-testing": "node scripts/consolidate-testing.cjs",
    "consolidate-testing:dry": "node scripts/consolidate-testing.cjs --dry-run",
    "consolidate-testing:verbose": "node scripts/consolidate-testing.cjs --verbose",
    "validate-consolidation": "node scripts/validate-consolidation.cjs",
    "validate-consolidation:verbose": "node scripts/validate-consolidation.cjs --verbose",
    "validate-consolidation:fix": "node scripts/validate-consolidation.cjs --fix",
    "fix:all-errors": "node scripts/fix-all-errors.cjs",
    "fix:all-errors:dry": "node scripts/fix-all-errors.cjs --dry-run",
    "fix:all-errors:skip-install": "node scripts/fix-all-errors.cjs --skip-install",
    "fix:imports": "node scripts/fix-imports-and-naming.cjs",
    "fix:imports:precise": "node scripts/precise-import-fixer.cjs",
    "fix:imports:duplicate": "node scripts/fix-duplicate-imports.cjs",
    "fix:naming:unified": "node scripts/fix-unified-layout-naming.cjs",
    "fix:naming:conflicts": "node scripts/fix-naming-conflicts.cjs",
    "fix:react:imports": "node scripts/fix-missing-react-imports.cjs",
    "check:react:imports": "node scripts/comprehensive-react-imports-check.cjs",
    "fix:module:loading": "node scripts/fix-module-loading-issues.cjs",
    "check:imports:duplicate": "node scripts/check-duplicate-imports.cjs",
    "check:declarations:duplicate": "node scripts/check-duplicate-declarations.cjs",
    "check:naming": "node scripts/check-naming-conventions.cjs",
    "fix:typescript": "node scripts/fix-typescript-errors.cjs",
    "fix:all": "npm run fix:imports:precise && npm run fix:imports:duplicate && npm run fix:naming:unified && npm run fix:naming:conflicts && npm run fix:react:imports && npm run lint:fix && npm run type-check",
    "deps:update": "npm update",
    "ci:check": "npm run type-check && npm run lint && npm run build",
    "_comment_validation": "✅ 验证工具",
    "scripts:validate": "node scripts/validate-scripts.cjs",
    "_comment_cleanup": "🧹 清理操作",
    "clean": "rimraf dist dist-electron node_modules/.cache",
    "clean:all": "rimraf dist dist-electron node_modules"
  },
  "dependencies": {
    "@ant-design/icons": "^6.0.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@heroicons/react": "^2.2.0",
    "@mui/icons-material": "^7.3.2",
    "@mui/lab": "^7.0.0-beta.17",
    "@mui/material": "^7.3.2",
    "@types/qrcode": "^1.5.5",
    "ahooks": "^3.9.4",
    "antd": "^5.27.1",
    "axios": "^1.11.0",
    "bcrypt": "^5.1.1",
    "chart.js": "^4.5.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "jwt-decode": "^4.0.0",
    "lucide-react": "^0.544.0",
    "pg": "^8.11.3",
    "pixelmatch": "^7.1.0",
    "qrcode": "^1.5.4",
    "qrcode.react": "^4.2.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-datepicker": "^8.7.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^6.20.1",
    "recharts": "^2.15.3",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^3.3.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.17.20",
    "@types/pg": "^8.10.9",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.0",
    "connect-history-api-fallback": "^2.0.0",
    "cross-env": "^7.0.3",
    "electron": "^32.2.6",
    "electron-builder": "^25.1.8",
    "eslint": "^9.15.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "globals": "^15.15.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.31",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vite": "^4.5.0",
    "vitest": "^1.6.0",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.testweb.app",
    "productName": "Test Web App",
    "directories": {
      "output": "dist-electron",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "!node_modules/.cache",
      "!node_modules/.vite"
    ],
    "includeSubNodeModules": true,
    "buildDependenciesFromSource": false,
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "your-username",
      "repo": "test-web-app"
    }
  },
  "optionalDependencies": {
    "@esbuild/win32-x64": "^0.25.5"
  },
  "resolutions": {
    "glob": "^10.3.0",
    "rimraf": "^5.0.0",
    "eslint": "^9.15.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "inflight": "^1.0.6",
    "@types/node": "^20.10.0"
  }
}
