# ===========================================
# Test Web App - 后端服务器配置模板
# ===========================================
# 复制此文件为 .env 并根据实际环境修改配置值
# 请勿将包含真实密钥的 .env 文件提交到版本控制

# ===========================================
# 环境配置
# ===========================================
NODE_ENV=development
TZ=Asia/Shanghai

# ===========================================
# 服务器配置
# ===========================================
PORT=3001
HOST=localhost
APP_NAME=Test Web App
APP_VERSION=1.0.0

# ===========================================
# 数据库配置 (PostgreSQL)
# ===========================================
DATABASE_URL=postgresql://username:password@localhost:5432/database_name
DB_HOST=localhost
DB_PORT=5432
DB_NAME=testweb_dev
DB_USER=postgres
DB_PASSWORD=your_database_password_here

# 数据库连接池配置
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# ===========================================
# Redis缓存配置
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=true

# ===========================================
# 认证和安全配置
# ===========================================
# JWT配置 - 生产环境请使用强密钥
JWT_SECRET=your-super-secure-jwt-secret-here-min-32-chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# 密码加密
BCRYPT_ROUNDS=12

# 会话配置
SESSION_SECRET=your-super-secure-session-secret-here-min-32-chars
SESSION_MAX_AGE=86400000

# ===========================================
# CORS配置
# ===========================================
CORS_ORIGIN=http://localhost:5174,http://localhost:3000

# ===========================================
# 限流配置
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX_ATTEMPTS=5

# ===========================================
# 文件上传配置
# ===========================================
MAX_FILE_SIZE=50mb
UPLOAD_DIR=uploads
TEMP_DIR=temp

# ===========================================
# 日志配置
# ===========================================
LOG_LEVEL=info
LOG_DIR=logs
LOG_FILE=logs/app.log

# ===========================================
# 邮件配置 (可选)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@testweb.com

# ===========================================
# 第三方服务配置 (可选)
# ===========================================
# MaxMind GeoLite2
MAXMIND_LICENSE_KEY=your_maxmind_license_key_here

# Google APIs
GOOGLE_PAGESPEED_API_KEY=your_google_api_key_here
GOOGLE_PROJECT_ID=your_project_id

# 测试服务
GTMETRIX_API_KEY=your_gtmetrix_api_key
WEBPAGETEST_API_KEY=your_webpagetest_api_key

# ===========================================
# 测试引擎配置
# ===========================================
TEST_TIMEOUT=30000
TEST_MAX_CONCURRENT=5
K6_ENABLED=true
LIGHTHOUSE_ENABLED=true
PLAYWRIGHT_ENABLED=true

# ===========================================
# 监控配置
# ===========================================
MONITORING_ENABLED=true
DEFAULT_MONITOR_INTERVAL=300

# ===========================================
# 开发环境配置
# ===========================================
DEBUG_SQL=false
DEBUG_ROUTES=false
WATCH_FILES=true
