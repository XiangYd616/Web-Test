# Test Web App 云端环境配置
# 请根据您的云服务器实际情况修改这些配置

# 应用配置
NODE_ENV=production
PORT=3001
API_URL=https://api.yourdomain.com

# 数据库配置 (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=testweb_prod
DB_USER=testweb_user
DB_PASSWORD=your_secure_database_password_here
DB_SSL=false
DB_MAX_CONNECTIONS=20

# JWT 配置
JWT_SECRET=your_super_secret_jwt_key_for_production_environment
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS 配置
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://api.yourdomain.com

# Redis 配置 (可选，用于会话存储)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 文件上传配置
UPLOAD_MAX_SIZE=10mb
UPLOAD_PATH=/opt/test-web-app/uploads
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# 邮件配置 (用于发送通知)
SMTP_HOST=smtp.yourmailprovider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@yourdomain.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=Test Web App <noreply@yourdomain.com>

# 日志配置
LOG_LEVEL=info
LOG_FILE=/var/log/testweb/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# 安全配置
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_key_here
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# 监控配置
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
METRICS_PORT=9090

# 缓存配置
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# 第三方服务配置
# 阿里云 OSS (可选)
ALIYUN_OSS_REGION=oss-cn-hangzhou
ALIYUN_OSS_BUCKET=your-bucket-name
ALIYUN_OSS_ACCESS_KEY_ID=your_access_key_id
ALIYUN_OSS_ACCESS_KEY_SECRET=your_access_key_secret

# 微信小程序配置 (可选)
WECHAT_APP_ID=your_wechat_app_id
WECHAT_APP_SECRET=your_wechat_app_secret

# 支付配置 (可选)
ALIPAY_APP_ID=your_alipay_app_id
ALIPAY_PRIVATE_KEY=your_alipay_private_key
ALIPAY_PUBLIC_KEY=your_alipay_public_key
