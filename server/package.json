{
  "name": "testweb-api-server",
  "version": "1.0.0",
  "description": "Test Web App API Server",
  "main": "app.js",
  "scripts": {
    "_comment": "⚠️ 不要直接在此目录启动服务器！请在根目录使用 'npm start'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "build": "echo 'No build step required for Node.js'",
    "docs": "swagger-jsdoc -d swaggerDef.js -o docs/swagger.json routes/*.js",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "validate-env": "node scripts/validate-env.js",
    "init-db": "node scripts/init-database.js",
    "reset-db": "node scripts/reset-database.js",
    "check-db": "node scripts/check-database.js",
    "check-health": "curl http://localhost:3001/health",
    "docker:build": "docker build -f ../Dockerfile.api -t testweb-api .",
    "docker:run": "docker run -p 3001:3001 testweb-api"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.2",
    "cheerio": "^1.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "crypto": "^1.0.1",
    "csv-parser": "^3.2.0",
    "csv-writer": "^1.6.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-openapi-validator": "^5.1.2",
    "express-prometheus-middleware": "^1.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "fast-csv": "^5.0.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lighthouse": "^11.4.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "mongodb": "^6.17.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.14.1",
    "nodemailer": "^6.9.7",
    "pdf-lib": "^1.17.1",
    "pdfkit": "^0.17.1",
    "pg": "^8.16.2",
    "pg-hstore": "^2.3.4",
    "playwright": "^1.53.1",
    "prom-client": "^15.1.0",
    "puppeteer": "^24.10.2",
    "recharts": "^2.15.3",
    "redis": "^5.5.6",
    "sequelize": "^6.35.2",
    "sharp": "^0.33.1",
    "socket.io": "^4.7.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "ws": "^8.14.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "sequelize-cli": "^6.6.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "test",
    "web",
    "api",
    "performance",
    "security",
    "seo",
    "monitoring",
    "postgresql",
    "express",
    "javascript"
  ],
  "author": "Test Web App Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/test-web-app.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/test-web-app/issues"
  },
  "homepage": "https://github.com/your-org/test-web-app#readme",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/dist/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error"
    }
  },
  "nodemonConfig": {
    "watch": [
      "."
    ],
    "ext": "js,json",
    "ignore": [
      "node_modules/",
      "dist/",
      "coverage/",
      "logs/"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  }
}
