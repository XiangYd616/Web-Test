# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 80

# JSON files
[*.json]
indent_size = 2
max_line_length = 120

# CSS/SCSS files
[*.{css,scss,sass}]
indent_size = 2

# HTML files
[*.html]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 100

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Configuration files
[*.{toml,ini}]
indent_size = 4

# Shell scripts
[*.{sh,bash}]
indent_size = 4

# Python files
[*.py]
indent_size = 4

# Makefile
[Makefile]
indent_style = tab

# Package files
[package.json]
indent_size = 2
